<?xml version="1.0" encoding="utf-8"?>
<web-app id="iocaste_tests" xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
    <description>iocaste shell</description>
    <display-name>iocaste shell</display-name>
    
    <!-- 
    <servlet>
        <servlet-name>iocaste_server</servlet-name>
        <servlet-class>@server.class@</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>iocaste_server</servlet-name>
        <url-pattern>/services.html</url-pattern>
    </servlet-mapping>
     -->
     
    <servlet>
        <servlet-name>page_renderer</servlet-name>
        <servlet-class>org.iocaste.shell.PageRenderer</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>page_renderer</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    
    <resource-ref>
        <description>iocaste db access</description>
        <res-ref-name>jdbc/iocaste</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>