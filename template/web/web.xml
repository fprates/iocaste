<?xml version="1.0" encoding="utf-8"?>
<web-app id="iocaste_tests" xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5"> 
    <description>Application Template</description>
    <display-name>Iocaste Application</display-name>
    
    <servlet>
        <servlet-name>iocaste_server</servlet-name>
        <servlet-class>@server.class@</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>iocaste_server</servlet-name>
        <url-pattern>/services.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>iocaste_servlet</servlet-name>
        <servlet-class>org.iocaste.shell.common.IocasteServlet</servlet-class>
        <!--
            put your View and Controller modules here
        <init-param>
            <param-name>view</param-name>
            <param-value>org.iocaste.login.LoginView</param-value>
        </init-param>
        <init-param>
            <param-name>controller</param-name>
            <param-value>org.iocaste.login.LoginController</param-value>
        </init-param>
        -->
    </servlet>
    
    <servlet-mapping>
        <servlet-name>iocaste_servlet</servlet-name>
        <url-pattern>/view.html</url-pattern>
    </servlet-mapping>
    
    <listener>
        <listener-class>org.iocaste.protocol.HibernateListener</listener-class>
    </listener>
    
    <resource-ref>
        <description>iocaste db access</description>
        <res-ref-name>jdbc/iocaste</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>