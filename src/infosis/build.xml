<project name="infosis" default="compile">
    <property name="transport.dir"
    	value="${basedir}/transport/iocaste-${ant.project.name}"/>
	
    <target name="compile">
        <mkdir dir="${transport.dir}/WEB-INF/lib"/>
        <mkdir dir="${transport.dir}/WEB-INF/classes"/>
        
        <copy todir="${transport.dir}/WEB-INF"
            file="${basedir}/src/${ant.project.name}/web/web.xml"/>
    	
    	<copy todir="${transport.dir}/WEB-INF/classes">
    		<fileset dir="${basedir}/src/${ant.project.name}/classes"/>
    	</copy>
    </target>
</project>